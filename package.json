{
  "name": "growth-prototype",
  "version": "0.1.0",
  "description": "Campaign management web application for GROWTH tabletop RPG with character system, world building, and KRMA tokenomics",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:clean": "node scripts/cleanup-and-start.js",
    "dev:test": "node scripts/test-server.js",
    "startup": "node scripts/startup.js",
    "cleanup": "node scripts/cleanup-port.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "reset": "npm run cleanup && npm run dev",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "postinstall": "prisma generate",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.15.0",
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "googleapis": "^159.0.0",
    "nanoid": "^5.1.6",
    "next": "15.5.2",
    "nodemailer": "^7.0.6",
    "prisma": "^6.15.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "playwright": "^1.55.0",
    "tailwindcss": "^4",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  }
}
